#:kivy 1.0
#:import kivy kivy

<KioskLayout>
	wheel1: wheel
	
	canvas:
		Rectangle:
			size:root.size
			source: "img/bg.jpg"
	
	BoxLayout:
		orientation:"vertical"
		size: root.size
		
		BoxLayout:
			size_hint:1,0.2	
			Label:
				canvas:
					Rectangle:
						source:"img/Extended.png"
						size: self.size[0]/2,self.size[1]
						pos:self.width/4,self.pos[1]
				text:"EcoCar2"
				font_size: 66
				bold: True
				font_name:"fonts/coopbl.tff"
				color:1,1,1,0.3
				pos:root.width/2 - 55,root.height-self.height
		BoxLayout:
			orientation:"horizontal"
			size_hint:1,0.3
			Image:
				source:"img/n3.png"
			Image:
				source:"img/n2.png"
		BoxLayout:	
			size_hint: 1,0.7
			FloatLayout:
				id: wheel
				Image:
					center:self.parent.center
					allow_stretch:True
					keep_ratio:False
					source:"img/wheel.png"
					size:400,400
					size_hint:0,0
		BoxLayout:
			size_hint:1,0.3
			orientation:"horizontal"
			Image:
				source:"img/n4.png"
			Image:
				source:"img/n1.png"

<InformationView>:	
	size_hint: (1, 1)
	orientation: 'vertical'
	tab_cont: tab_container
	pic_cont: picture_container
	vid_cont: video_container
	padding: 10
	spacing: 5
	
	canvas:
		Rectangle:
			source: 'img/bg.jpg'
			size: (root.width, root.height)

	Label:
		text: root.title
		size_hint_y: 0.05
		font_size: 18
		bold: True
		
	BoxLayout:
		id: tab_container
		size_hint: (1, 0.65)
		orientation: 'vertical'
				
	BoxLayout:
		orientation: 'horizontal'
		size_hint_y: 0.3
		spacing: 10
		
		Video:
			id: video_container
			size_hint: (0.3, 1)

		ScrollView:
			size_hint_y: 1
			
			GridLayout:
				id: picture_container
				rows:1
				spacing:10
				size_hint: (1, 1)
					
<TabLayout>:
	content_obj: content_obj
	header_obj: header_obj
	orientation:'vertical'
	
	GridLayout:
		id:header_obj
		rows:1
		size_hint: (1, 0.1)
	BoxLayout:
		id: content_obj
		size_hint: (1, 0.9)