#:kivy 1.0.7

<InformationScreen>:	
	size_hint: (1, 1)
	orientation: 'vertical'
	tabInterface: tab_interface
	padding: 10
	spacing: 5

	Label:
		text: 'Title'
		size_hint_y: 0.05
		font_size: 18
		
	BoxLayout:
		id:tab_interface
		size_hint: (1, 0.65)
		orientation: 'vertical'
				
	BoxLayout:
		orientation: 'horizontal'
		size_hint_y: 0.3
		spacing: 10
		
		BoxLayout:
			orientation: 'vertical'
			size_hint_x: 0.3
			Video:
				id: 'video'
				source: 'Wildlife.wmv'
				play: playswtch.active
				allow_stretch: True
			Switch:
				id: playswtch

		ScrollView:
			size_hint_y: 1
			
			GridLayout:
				rows:1
				spacing:10
				size_hint: (None, 1)
				
				Image:
					source: 'car1.jpg'
					width:self.image_ratio*self.height
					size_hint: (None, 1)
					allow_stretch:True
					keep_ratio: False
					
				Image:
					source: 'car2.jpg'
					width:self.image_ratio*self.height
					size_hint: (None, 1)
					allow_stretch:True
					keep_ratio: False
				
				Image:
					source: 'car3.jpg'
					width:self.image_ratio*self.height
					size_hint: (None, 1)
					allow_stretch:True
					keep_ratio: False
					
				Image:
					source: 'car4.jpg'
					width:self.image_ratio*self.height
					size_hint: (None, 1)
					allow_stretch:True
					keep_ratio: False
					
<TabLayout>:
	content_obj: content_obj
	header_obj: header_obj
	orientation:'vertical'
	
	GridLayout:
		id:header_obj
		rows:1
		size_hint: (1, 0.1)
	BoxLayout:
		id: content_obj
		size_hint: (1, 0.9)