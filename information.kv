#:kivy 1.0.9

<InformationView>:	
	size_hint: (1, 1)
	orientation: 'vertical'
	tab_cont: tab_container
	pic_cont: picture_container
	vid_cont: video_container
	padding: 10
	spacing: 5

	Label:
		text: root.title
		size_hint_y: 0.05
		font_size: 18
		bold: True
		
	BoxLayout:
		id: tab_container
		size_hint: (1, 0.65)
		orientation: 'vertical'
				
	BoxLayout:
		orientation: 'horizontal'
		size_hint_y: 0.3
		spacing: 10
		
		BoxLayout:
			id: video_container
			orientation: 'vertical'
			size_hint: (0.3, 1)
			Video:
				source: root.vid_src
				play: playswtch.active
				allow_stretch: True
			Switch:
				id: playswtch

		ScrollView:
			size_hint_y: 1
			
			GridLayout:
				id: picture_container
				rows:1
				spacing:10
				size_hint: (None, 1)
				
				Image:
					source: 'img/car1.jpg'
					width:self.image_ratio*self.height
					size_hint: (None, 1)
					allow_stretch:True
					keep_ratio: False
					
				Image:
					source: 'img/car2.jpg'
					width:self.image_ratio*self.height
					size_hint: (None, 1)
					allow_stretch:True
					keep_ratio: False
				
				Image:
					source: 'img/car3.jpg'
					width:self.image_ratio*self.height
					size_hint: (None, 1)
					allow_stretch:True
					keep_ratio: False
					
				Image:
					source: 'img/car4.jpg'
					width:self.image_ratio*self.height
					size_hint: (None, 1)
					allow_stretch:True
					keep_ratio: False
					
<TabLayout>:
	content_obj: content_obj
	header_obj: header_obj
	orientation:'vertical'
	
	GridLayout:
		id:header_obj
		rows:1
		size_hint: (1, 0.1)
	BoxLayout:
		id: content_obj
		size_hint: (1, 0.9)