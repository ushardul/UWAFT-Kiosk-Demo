#:kivy 1.0
#:import kivy kivy
#:import win kivy.core.window

<PanUI>:
    FloatLayout:
        size: 800,750
        canvas:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                size:self.size
                pos:self.pos
        
